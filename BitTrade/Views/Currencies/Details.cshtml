@{
    var marketCurrency = (MarketCurrency)ViewData["MarketCurrency"];
}
<div class="container container-content">
    <div class="row">
        <div class="col-lg-12 text-align-center">
            <h1>Market @marketCurrency.MarketName details</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-align-center margin-bottom-40">
            <h3>
                All values are current from BitTrex API.
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label">High</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.High</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Low</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Low</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Volume</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Volume</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Last</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Last</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Base volume</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.BaseVolume</p>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label">Bid</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Bid</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Ask</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Ask</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Open buy orders</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.OpenBuyOrders</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Open sell orders</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.OpenSellOrders</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Creation date</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@marketCurrency.Created</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-align-center">
            @using(Html.BeginForm("Register", "Login", FormMethod.Post)) {
                <button class="btn btn-warning" type="submit">Ajouter au favoris</button>
            }
        </div>
    </div>
</div>
