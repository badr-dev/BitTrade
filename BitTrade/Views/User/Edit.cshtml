@{
    var user = (User)ViewData["User"];
}
<div class="container container-content">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked admin-menu">
                <li class="active"><a href="#">Profile</a></li>
                <li><a asp-controller="User" asp-action="Favorites">Favorites</a></li>
                <li><a asp-controller="User" asp-action="Unsubscribe">Unsubscribe</a></li>
            </ul>
        </div>
        <div class="col-md-9 well admin-content">
            @if (ViewData["Error"] != null) {
            <div class="row text-align-center">
                <div class="alert alert-danger">@ViewData["Error"]</div>
            </div>
            }
            @if (ViewData["Success"] != null) {
            <div class="row text-align-center">
                <div class="alert alert-success">@ViewData["Success"]</div>
            </div>
            }
            @using(Html.BeginForm("Edit", "User", FormMethod.Post)) {
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="Firstname" name="firstname" value="@user.Firstname" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Surname" name="surname" value="@user.Surname" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="E-mail" name="email" value="@user.Email" type="email" readonly="">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Confirm password" name="password" value="@user.Password" type="password">
                </div>
                <button type="submit" class="btn btn-sm btn-success">Edit</button>
            </fieldset>
            }
        </div>
    </div>
</div>


